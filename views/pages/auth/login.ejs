<%- include('../../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="row justify-content-md-center">
        <div class="col-md-6 offet-md-3">
            <div class="card card-body">
                <h4 class="mb-3">Login to your account</h4>
                <form action="/auth/login" method="POST" role="form">

                    <div class="form-group">
                        <label for="email">Enter your valid email</label>
                        <input type="email" name="email" class="form-control <%= error.email ? 'is-invalid' : ''  %>"
                            id="email">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password">Enter your password</label>
                        <input type="password" name="password"
                            class="form-control <%= error.password ? 'is-invalid' : ''  %>" id="password">
                        <div class="invalid-feedback">
                            <%= error.password && error.password %>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-primary">Login</button>

                </form>

                <a href="/auth/signup" class="my-3 text-center">Don't have an account? Create one </a>

            </div>

        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
</body>

</html>